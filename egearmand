#!/bin/bash

args=$@
notfound=true

for i in ${args[@]}; do
    if [[ $i == "-version" ]] ; then
        notfound=false
        erl -noshell -pa ebin -pa contrib/erlang-rfc4627/ebin/ -run egearmand_app show_version -s init stop;
    else
        for i in ${args[@]}; do
            if [[ $i == "-help" ]] ; then
                notfound=false
                erl -noshell -pa ebin -pa contrib/erlang-rfc4627/ebin/ -run egearmand_app show_help -s init stop;
            fi
        done
    fi
done

if $notfound ; then
    erl -noshell -pa ebin -pa contrib/erlang-rfc4627/ebin/ -run egearmand_app cmd_start $@
#    erl -pa ebin -pa contrib -run egearmand_app cmd_start $@
fi
